        separator_symbol "|"
        strip_workspace_numbers yes
        status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
        #status_command polybar -c ~/.config/polybar/config
        i3bar_command i3bar -t 
        tray_output none
        # output eDP-1
        #mode hide
        #hidden_state hide
        position top
        height 23
        font pango: SF Pro Rounded 10

        #     font pango: ProggyClean Nerd Font Mono 10

        #light       
	colors {
		#background #20242c
		background #00000000
		statusline #0C005C
        	#separator #70797C
                separator #d7d7d7

		focused_workspace  #0C005C #0C005C   #ffffff
	        active_workspace   #0E5B96 #0E5B96 #ffffff
        	inactive_workspace #00000000 #00000000 #ffffff
      		urgent_workspace   #840F22 #840F22 #ffffff
        	binding_mode       #00000000 #00000000 #ffffff
	}

}


